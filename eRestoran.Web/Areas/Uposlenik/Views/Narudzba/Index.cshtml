@model eRestoran.Web.Areas.Uposlenik.Models.NarudzbePrikaz


<div class="wrapper">
    <form asp-action="Index">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" aria-label="Previous" style="color:slategrey" asp-route-page="@Model.Narudzbe.FirstPage" asp-route-search="@Model.Search">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @if (Model.Narudzbe.PreviousPage != null)
                {
                    <li class="page-item">
                        <a class="page-link" asp-route-page="@Model.Narudzbe.PreviousPage" asp-route-search="@Model.Search">
                            @Model.Narudzbe.PreviousPage
                        </a>
                    </li>
                }
                <li class="page-item active"><a class="page-link" style="background-color:slategrey;border:1px solid slategrey" href="#"> @Model.Narudzbe.PageNumber </a></li>
                @if (Model.Narudzbe.NextPage != null)
                {
                    <li class="page-item">
                        <a class="page-link" asp-route-page="@Model.Narudzbe.NextPage" asp-route-search="@Model.Search">
                            @Model.Narudzbe.NextPage
                        </a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" style="color:slategray" asp-route-page="@Model.Narudzbe.LastPage" asp-route-search="@Model.Search">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>

            <div class="spacer"></div>
            <div class="form-inline my-2 my-lg-0">
                <input id="search" class="form-control mr-sm-2" type="search" placeholder="Pretraga" aria-label="Search" value="@Model.Search">
                <a class="btn my-2 my-sm-0 btn-search" style="background-color: slategray; color:white" asp-route-page="@Model.Narudzbe.FirstPage" asp-route-search="@Model.Search">Pretraga</a>
            </div>
        </nav>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Adresa
                    </th>
                    <th>
                        Telefon
                    </th>
                    <th>
                        Datum dostave
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Akcije
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Narudzbe.Data)
                {
                    <tr>
                        <td>
                            @item.Adresa
                        </td>
                        <td>
                            @item.Telefon
                        </td>
                        <td>
                            @if (item.DatumNarudzbe != null)
                            {
                                <span>@item.DatumNarudzbe</span>
                            }
                        </td>
                        <td>
                            @if (item.StatusDostaveID == 1)
                            {
                                <span class="btn btn-success">@item.StatusDostave.Status</span>
                            }
                            else if (item.StatusDostaveID == 2)
                            {
                                <span class="btn btn-danger">@item.StatusDostave.Status</span>
                            }
                            else if (item.StatusDostaveID == 3)
                            {
                                <span class="btn btn-info">@item.StatusDostave.Status</span>
                            }
                        </td>
                        <td>
                            <a class="btn" style="background-color:slategrey; color:white"
                               asp-area="Uposlenik" asp-controller="Narudzba" asp-action="NarudzbaUredi" asp-route-id="@item.ID">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>
<script src="~/js/search.js"></script>