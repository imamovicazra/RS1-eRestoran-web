@using eRestoran.Contracts.Responses

@model eRestoran.Web.Areas.Uposlenik.Models.NamirnicaPrikaz


<div class="wrapper">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" aria-label="Previous" style="color:slategray" asp-route-page="@Model.Content.FirstPage" asp-route-search="@Model.Search">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @if (Model.Content.PreviousPage != null)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@Model.Content.PreviousPage" asp-route-search="@Model.Search">
                        @Model.Content.PreviousPage
                    </a>
                </li>
            }
            <li class="page-item active"><a class="page-link" style="background-color:slategrey; color:white; border: 1px solid slategray"> @Model.Content.PageNumber </a></li>
            @if (Model.Content.NextPage != null)
            {
                <li class="page-item">
                    <a class="page-link" style="color:slategray" asp-route-page="@Model.Content.NextPage" asp-route-search="@Model.Search">
                        @Model.Content.NextPage
                    </a>
                </li>
            }
            <li class="page-item">
                <a class="page-link" style="color:slategray" asp-route-page="@Model.Content.LastPage" asp-route-search="@Model.Search">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
        <div class="spacer"></div>
        <div class="form-inline my-2 my-lg-0">
            <input id="search" class="form-control mr-sm-2" type="search" placeholder="Pretraga" aria-label="Search" value="@Model.Search">
            <a class="btn my-2 my-sm-0 btn-search" style="background-color:slategray; color:white" asp-route-page="@Model.Content.FirstPage" asp-route-search="@Model.Search">Pretraga</a>
        </div>
    </nav>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Namirnica
                </th>
                <th>
                    Količina
                </th>
                <th>
                    Cijena po komadu
                </th>
                <th>
                    Jedinica mjere
                </th>
                <th>
                    Akcije
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Content.Data)
            {
                <tr>
                    <td>
                        @item.Naziv
                    </td>
                    <td>
                        @item.Kolicina
                    </td>
                    <td>
                        @item.CijenaPoKomadu KM
                    </td>
                    <td>
                        @item.JedinicaMjere
                    </td>
                    <td>
                        <a class="btn btn-secondary"
                           asp-area="Uposlenik" asp-controller="Skladiste" asp-action="NamirnicaUpsert" asp-route-id="@item.ID">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                            </svg>
                        </a>
                        <a class="btn btn-danger"
                           asp-area="Uposlenik" asp-controller="Skladiste" asp-action="NamirnicaUkloni" asp-route-id="@item.ID">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn" style="background-color:slategrey; color:white"
       asp-area="Uposlenik" asp-controller="Skladiste" asp-action="NamirnicaUpsert">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
        </svg>
    </a>
</div>
<script src="~/js/search.js">

</script>
